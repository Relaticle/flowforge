{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/flowforge.css --postcss --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/flowforge.css --postcss --minify && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/flowforge.css -o resources/dist/flowforge.css",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.2",
        "@tailwindcss/cli": "^4.1.10",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4.1.10",
        "@tailwindcss/typography": "^0.5.16",
        "esbuild": "^0.25.5",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "postcss-nested": "^7.0.2",
        "postcss-nesting": "^13.0.2",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "sass": "^1.89.2",
        "tailwindcss": "^4.1.10"
    }
